<Window x:Class="SpellCheckerDemo.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Icon="{x:Null}"
        Title="Spell Checker" Width="311" Height="124" x:Name="Root" ResizeMode="NoResize" ShowInTaskbar = "false">
    <Grid Background="#FFF0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="0" Grid.Column="0" Height="32" Width="32" HorizontalAlignment="Right" VerticalAlignment="Center" Source="Info.png"  />
        <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="The spelling check is complete" />
        <Button Grid.Row="1" Grid.ColumnSpan="2" Width="64" Height="24" Content="Ok" Click="Button_Click"  />
    </Grid>
</Window>
