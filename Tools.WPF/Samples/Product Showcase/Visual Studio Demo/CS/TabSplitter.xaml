    <Style x:Key="{x:Type local:TabSplitterItem}" TargetType="{x:Type local:TabSplitterItem}" >
        <Setter Property="TextElement.Foreground" 
				Value="{StaticResource Aero.InactiveForeground}"/>
        <!--<Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />-->
        <Setter Property="FrameworkElement.FocusVisualStyle">
            <Setter.Value>
                <Style TargetType="IFrameworkInputElement">
                    <Setter Property="Control.Template">
                        <Setter.Value>
                            <!--<ControlTemplate>
                                <Rectangle Stroke="#FF000000" StrokeThickness="1" StrokeDashArray="1 2" Margin="3,3,3,1" SnapsToDevicePixels="True" />
                            </ControlTemplate>-->
                            <x:Null/>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="3,2,3,0"/>
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="2,2,2,0"/>
        <Setter Property="Control.HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="Control.VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:TabSplitterItem}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}"  CornerRadius="2,2,0,0" BorderThickness="1,1,1,0" Background="{TemplateBinding Background}" MinHeight="18" Name="Bd">


                        <DockPanel x:Name="PART_DockPanel" LastChildFill="True">
                            <Image x:Name="PART_Image" Source="{TemplateBinding local:TabSplitter.Image}" Stretch="None" Margin="0,0,0,4" SnapsToDevicePixels="True" VerticalAlignment="Center"
                           DockPanel.Dock="Left" />

                            <ContentPresenter x:Name="Content" ContentSource="Header"
								Margin="6,2,10,2" 
								  RecognizesAccessKey="True" TextBlock.Foreground="{TemplateBinding Foreground}"
								  Content="{TemplateBinding HeaderedContentControl.Header}"
								  ContentTemplate="{TemplateBinding HeaderedContentControl.HeaderTemplate}"
								  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
								  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
								  SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                        </DockPanel>


                    </Border>
                    <ControlTemplate.Triggers>
                        <!--End Initial section-->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(Panel.ZIndex), RelativeSource={RelativeSource Self}}" Value="9999"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="FrameworkElement.Margin" Value="2,2,0,0"/>
                        </MultiDataTrigger>
                        <!--IsSelected Section-->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <!--<Setter Property="FrameworkElement.Margin" Value="-12,-2,0,-1"/>-->
                        </MultiDataTrigger>
                        <!--<MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                <Condition Binding="{Binding Path=(Panel.ZIndex), RelativeSource={RelativeSource Self}}" Value="9999"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="FrameworkElement.Margin" Value="0,-2,-2,-1"/>
                        </MultiDataTrigger>-->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsMouseOver, ElementName=Bd}" Value="True"/>
                                <Condition Binding="{Binding Path=HotTrackingEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TabControlExt}}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Panel.Background" TargetName="Bd" Value="{Binding Path=(local:TabControlExt.HoverBackground), RelativeSource={RelativeSource TemplatedParent}}"/>
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsMouseOver, ElementName=Bd}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource VS2010TabsplitterItemHoverBackgroundBrush}"/>


                            <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource VS2010TabSplitterItemHoverBorderBrush}"/>
                        </MultiDataTrigger>

                        <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                            <!--<Setter Property="BottomBorderBrush" TargetName="Bd" Value="{StaticResource Aero.TabSelectedBottomBorderBrush}"/>-->
                            <!--<Setter Property="BorderInnerBrush" TargetName="Bd" Value="{StaticResource Aero.TabHoverBorderInnerBrush}"/>-->
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource VS2010TabSplitterItemSelectedBackgroundBrush}"/>

                            <Setter Property="Margin" TargetName="Bd" Value="0,0,0,-1"/>
                            <Setter Property="TextBlock.Foreground" Value="Black" TargetName="Content"/>

                            <Setter Property="TextElement.FontWeight" TargetName="Content"
						Value="{Binding Path=SelectedItemFontWeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TabControlExt}}}" />
                            <!--Value="SemiBold"/>-->
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True"/>
                                <Condition Binding="{Binding Path=IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource VS2010TabSplitterItemSelectedBackgroundBrush}"/>

                            <Setter Property="Margin" TargetName="Bd" Value="0,0,0,-1"/>
                            <Setter Property="TextBlock.Foreground" Value="Black" TargetName="Content"/>

                            <Setter Property="TextElement.FontWeight" TargetName="Content"
						Value="{Binding Path=SelectedItemFontWeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TabControlExt}}}" />
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=IsMouseOver, ElementName=Bd}" Value="True"/>
                                <Condition Binding="{Binding Path=HotTrackingEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:TabControlExt}}}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Background" TargetName="Bd" Value="{StaticResource VS2010TabsplitterItemHoverBackgroundBrush}"/>


                            <Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource VS2010TabSplitterItemHoverBorderBrush}"/>
                        </MultiDataTrigger>
                        <!--End VS 2008 specifies section-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <SolidColorBrush Color="#FFFFFCF4" x:Key="VS2010MenuButtonHoverBackgroundBrush"/>
    <SolidColorBrush Color="#FFE5C365" x:Key="VS2010MenuButtonHoverBorderBrush"/>
    <Style x:Key="SplitScrollingButton" TargetType="{x:Type Button}">
        <Setter Property="Visibility" Value="Collapsed"/>
        <!--<Setter Property="Visibility" Value="Visible"/>-->
        <Setter Property="Template" >
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <shared:Border3D x:Name="PART_Border" VerticalAlignment="Center" HorizontalAlignment="Center"
				            Margin="1,0,1,0"
                            Padding="4,1,1,1"
                            Width="15"
                            Height="15"
                            BorderThickness="1"
                            BorderBrush="{StaticResource Aero.ButtonInactiveBorderBrush}"
				            Opacity="{TemplateBinding Opacity}"
				            IsEnabled="{TemplateBinding IsEnabled}"
				            SnapsToDevicePixels="True"
				            CornerRadius="0">
                        <Canvas Width="8" Height="7">
                            <Path Data="M0,0L4,3.5 0,7" HorizontalAlignment="Center" Stroke="{StaticResource VS2010MenuButtonPathFill}" Fill="{StaticResource VS2010MenuButtonPathFill}" Name="PART_Path1" VerticalAlignment="Center"/>
                            <Path Data="M4,0L8,3.5 4,7" HorizontalAlignment="Center" Stroke="{StaticResource VS2010MenuButtonPathFill}" Fill="{StaticResource VS2010MenuButtonPathFill}" Name="PART_Path2" VerticalAlignment="Center"/>
                        </Canvas>
                    </shared:Border3D>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Tag" Value="PrevTab">
                            <!--<Setter TargetName="PART_Border" Property="Background" Value="Red"/>-->
                            <Setter TargetName="PART_Path1" Property="Data" Value="M4,0L0,3.5 4,7"/>
                            <Setter TargetName="PART_Path2" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="Tag" Value="NextTab">
                            <!--<Setter TargetName="PART_Border" Property="Background" Value="Green"/>-->
                            <Setter TargetName="PART_Path2" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="IsInverted" Value="True"/>
                            <Setter Property="Content" Value="1,1,-1,-1"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="PART_Border" Value="{StaticResource VS2010MenuButtonHoverBackgroundBrush}"/>
                            <Setter Property="BorderBrush" TargetName="PART_Border" Value="{StaticResource VS2010MenuButtonHoverBorderBrush}"/>
                            <Setter Property="Stroke" TargetName="PART_Path1" Value="Black"/>
                            <Setter Property="Fill" TargetName="PART_Path1" Value="Black"/>
                            <Setter Property="Stroke" TargetName="PART_Path2" Value="Black"/>
                            <Setter Property="Fill" TargetName="PART_Path2" Value="Black"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Bottom">
                            <Setter Property="FlowDirection" Value="RightToLeft"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>



    <Style TargetType="{x:Type local:SplitterPage}">
        <Setter Property="FrameworkElement.FocusVisualStyle" >
            <Setter.Value>
                <Style TargetType="IFrameworkInputElement">
                    <Setter Property="Control.Template" Value="{x:Null}" />
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="BorderThickness" Value="1"/>
