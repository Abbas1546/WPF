        <Setter Property="Background" Value="{StaticResource Aero.SplitterPageBackground}"/>
        <Setter Property="MinHeight" Value="18"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="Control.Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SplitterPage}">
                    <local:VS2008SplitterItemBorder   Name="Bd" BorderBrush="{TemplateBinding BorderBrush}"
										Background="{TemplateBinding Background}" Margin="0,0,0,-1"
                    ToolTip="{TemplateBinding HeaderedContentControl.Header}">
