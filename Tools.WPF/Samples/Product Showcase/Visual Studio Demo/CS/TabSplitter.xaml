                            <!--<Image x:Name="PART_Image" Source="{TemplateBinding Image}"  Width="11" Height="11"  Margin="0,0,0,4" SnapsToDevicePixels="True" VerticalAlignment="Center"
                           DockPanel.Dock="Left" />-->
                            <ContentPresenter        ContentSource="Header" x:Name="Content" Margin="5,0,10,0"
                                          RecognizesAccessKey="True" 
                                          Content="{TemplateBinding HeaderedContentControl.Header}"
                                          ContentTemplate="{TemplateBinding HeaderedContentControl.HeaderTemplate}"
                                          HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />

                        </DockPanel>
                    </local:VS2008SplitterItemBorder >
                    <ControlTemplate.Triggers>
                        <DataTrigger Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Bottom">
                            <Setter Property="Border.BorderThickness" TargetName="Bd" Value="1,1,1,0"/>
                            <Setter Property="Margin" TargetName="Content" Value="5,0,0,1"/>
                            <!--<Setter Property="Margin" TargetName="PART_Image" Value="5,0,0,0"/>-->
                            <Setter Property="VerticalAlignment" Value="Top" TargetName="PART_DockPanel"/>
                            <Setter Property="FlowDirection" Value="LeftToRight"/>
                            <Setter Property="Margin" TargetName="Bd" Value="0,0,0,-0.7"/>
                            <Setter Property="LayoutTransform" TargetName="PART_DockPanel">
                                <Setter.Value>
                                    <RotateTransform Angle="-180"/>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                        <!--<Trigger Property="Image" Value="{x:Null}">
                            <Setter Property="Visibility" TargetName="PART_Image" Value="Collapsed" />
                        </Trigger>-->
                        <DataTrigger Binding="{Binding Path=IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                            <!--<Setter Property="Background" TargetName="Bd"  Value="{Binding Path=SelectedBackground, RelativeSource={RelativeSource AncestorType={x:Type local:TabSplitter}}}"/>-->
                            <Setter Property="TextElement.Foreground"    Value="{Binding Path=SelectedForeground, RelativeSource={RelativeSource AncestorType={x:Type local:TabSplitter}}}"/>
                            <!--<Setter Property="BorderBrush" TargetName="Bd" Value="{StaticResource Aero.SplitterPageSelectedBorderBrush}"/>-->
                            <Setter Property="BottomBorderBrush" TargetName="Bd" Value="red"/>
                            <Setter Property="TextElement.FontWeight" TargetName="Content" Value="Thin"/>
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Right"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="VerticalAlignment" Value="Top" TargetName="PART_DockPanel"/>
                            <Setter Property="Margin" Value="6,-2,10,0" TargetName="Content"/>

                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Left"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Margin" TargetName="Bd" Value="0,0.5,0,0"/>
                            <Setter Property="Border.BorderThickness" TargetName="Bd" Value="1,1,1,0"/>
                            <Setter Property="FlowDirection" Value="LeftToRight"/>
                            <Setter Property="VerticalAlignment" Value="Bottom" TargetName="PART_DockPanel"/>
                            <Setter Property="Height" Value="18" TargetName="Bd"/>
                            <Setter Property="Margin" Value="6,4,10,1" TargetName="Content"/>
                            <!--<Setter Property="Margin" TargetName="PART_Image" Value="10,10,0,0"/>-->
                            <Setter TargetName="Content" Property="VerticalAlignment" Value="Bottom"/>
                            <Setter Property="LayoutTransform" TargetName="PART_DockPanel">
                                <Setter.Value>
                                    <RotateTransform Angle="-180"/>
                                </Setter.Value>
                            </Setter>
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Right"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Border.BorderThickness" TargetName="Bd" Value="1,1,1,0"/>
                            <!--<Setter Property="Margin" Value="-2,1,-8,0"/>-->
                            <Setter Property="Content" TargetName="Content" Value=" ">
                            </Setter>
                        </MultiDataTrigger>
                        <!--RotateTextWhenVertical = FALSE-->
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Bottom"/>
                            </MultiDataTrigger.Conditions>
                            <!--<Setter Property="Margin" Value="0,2,-10,0"/>-->
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Left"/>
                            </MultiDataTrigger.Conditions>
                            <!--<Setter Property="Margin" Value="-2,0,-8,0"/>-->
                            <Setter Property="Content" TargetName="Content" Value=" ">
                            </Setter>
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(Panel.ZIndex), RelativeSource={RelativeSource Self}}" Value="9999"/>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Top"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="FrameworkElement.Margin" Value="2,2,0,0"/>
                        </MultiDataTrigger>

                        <!--<MultiDataTrigger>
				<MultiDataTrigger.Conditions>
					<Condition Binding="{Binding Path=(Panel.ZIndex), RelativeSource={RelativeSource Self}}" Value="9999"/>
					<Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Right"/>
				</MultiDataTrigger.Conditions>
				<Setter Property="FrameworkElement.Margin" Value="2,0,0,0"/>
			</MultiDataTrigger>-->

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(Panel.ZIndex), RelativeSource={RelativeSource Self}}" Value="9999"/>
                                <Condition Binding="{Binding Path=(local:SplitterPage.TabStripPlacement),RelativeSource={RelativeSource Self}}" Value="Bottom"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="FrameworkElement.Margin" Value="0,2,2,0"/>
                        </MultiDataTrigger>

