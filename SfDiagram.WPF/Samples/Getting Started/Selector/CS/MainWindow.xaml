                </Setter>
            </Style>

            <Style x:Key="TopRightCornerResizerThumpTemplate1"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="Orange"/>
                <Setter Property="Height" Value="25"/>
