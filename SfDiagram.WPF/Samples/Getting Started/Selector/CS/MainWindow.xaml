                <Setter Property="Background" Value="Orange"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Margin" Value="0 0 -5 0"/>
                <Setter Property="VerticalAlignment" Value="Stretch"/>
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid >
                                <Rectangle Fill="Transparent"/>
                                <Border  Width="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  Margin="0 0 -3 0"
            						x:Name="PART_ReseizerThumb"
            						Background="{TemplateBinding Background}"
            						BorderBrush="{TemplateBinding BorderBrush}"
            						BorderThickness="0" />
                                <Rectangle    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"  Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"
            						x:Name="PART_ReseizerThumb1"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="1" Margin="7" Stroke="OrangeRed" Fill="Orange" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BottomResizerThumpTemplate1" TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="Orange" />
                <Setter Property="Margin" Value="0 0 0 -5"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid>
                                <Rectangle Fill="Transparent"/>
                                <Border  Height="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  
            						x:Name="PART_ReseizerThumb"
            						Background="{TemplateBinding Background}"
            						BorderBrush="{TemplateBinding BorderBrush}"
            						BorderThickness="0" />
                                <Rectangle    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"  Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}" 
            						x:Name="PART_ReseizerThumb1"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="1" Margin="7" Stroke="OrangeRed" Fill="Orange" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

