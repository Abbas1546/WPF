            <Style x:Key="BottomResizerThumpTemplate2" TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="#55000000" />
                <Setter Property="Margin" Value="1 0 1 -3"/>
                <Setter Property="Height" Value="3" />
                <Setter Property="VerticalAlignment" Value="Bottom" />
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border x:Name="PART_ResizerBorder" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            					VerticalAlignment="{TemplateBinding VerticalAlignment}" Margin="{TemplateBinding Margin}"
            					CornerRadius="7" 
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TopLeftCornerResizerThumpTemplate2"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="#55000000"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Margin" Value="-3 -3 0 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border x:Name="PART_ResizerBorder" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            					VerticalAlignment="{TemplateBinding VerticalAlignment}"  Margin="{TemplateBinding Margin}"
            					CornerRadius="7" 
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TopRightCornerResizerThumpTemplate2"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="#55000000"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Margin" Value=" 0 -3 -3 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border x:Name="PART_ResizerBorder" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            					VerticalAlignment="{TemplateBinding VerticalAlignment}"  Margin="{TemplateBinding Margin}"
            					CornerRadius="7" 
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BottomLeftCornerResizerThumpTemplate2"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="#55000000"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Margin" Value="-3 0 0 -3"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border x:Name="PART_ResizerBorder" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            					VerticalAlignment="{TemplateBinding VerticalAlignment}" Margin="{TemplateBinding Margin}"
            					CornerRadius="7" 
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BottomRightCornerResizerThumpTemplate2"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="#55000000"/>
                <Setter Property="Height" Value="10"/>
                <Setter Property="Width" Value="10"/>
                <Setter Property="Margin" Value="0 0 -3 -3"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border x:Name="PART_ResizerBorder" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            					VerticalAlignment="{TemplateBinding VerticalAlignment}"  Margin="{TemplateBinding Margin}"
            					CornerRadius="7" 
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="0" />
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="OldSelector"  TargetType="{x:Type sf:Selector}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="{TemplateBinding BorderThickness}">
                                <panels:SelectorPanel>
                                    <panels:SelectorPanel.Resources>
                                        <Style x:Key="pathStyle" TargetType="{x:Type Shape}">
                                            <Setter Property="StrokeThickness" Value="1"/>
                                            <Setter Property="Stroke" Value="{StaticResource PathStrokeThemeBrush}"/>
                                        </Style>
                                    </panels:SelectorPanel.Resources>
                                    <Rectangle Style="{StaticResource pathStyle}" Stretch="Fill" StrokeDashArray="2, 2"/>
                                    <Line X1="0" X2="0" Y1="0" Y2="0" StrokeThickness="0" Visibility="Collapsed" StrokeDashArray="2, 2" Style="{StaticResource pathStyle}"/>
                                    <localControls:DiagramThumb x:Name="PART_TopLeft" ControlPointType="TopLeftResizer"
            							Style="{StaticResource TopLeftCornerResizerThumpTemplate2}"
            							HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_Top"  ControlPointType="TopResizer"
            							Style="{StaticResource TopResizerThumpTemplate2}"
            							HorizontalAlignment="Stretch" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_TopRight" ControlPointType="TopRightResizer"
            							Style="{StaticResource TopRightCornerResizerThumpTemplate2}"
            							HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_Left" ControlPointType="LeftResizer"
            							Style="{StaticResource LeftResizerThumpTemplate2}"
            							HorizontalAlignment="Left" VerticalAlignment="Stretch"/>
                                    <localControls:DiagramThumb x:Name="PART_Right" ControlPointType="RightResizer"
            							Style="{StaticResource RightResizerThumpTemplate2}"
            							HorizontalAlignment="Right" VerticalAlignment="Stretch"/>
                                    <localControls:DiagramThumb x:Name="PART_BottomLeft" ControlPointType="BottomLeftResizer"
            							Style="{StaticResource BottomLeftCornerResizerThumpTemplate2}"
            							HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                    <localControls:DiagramThumb x:Name="PART_Bottom" ControlPointType="BottomResizer"
            							Style="{StaticResource BottomResizerThumpTemplate2}"
            							HorizontalAlignment="Stretch" VerticalAlignment="Bottom"/>
                                    <localControls:DiagramThumb x:Name="PART_BottomRight" ControlPointType="BottomRightResizer"
            							Style="{StaticResource BottomRightCornerResizerThumpTemplate2}"
            							HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                                    <localControls:DiagramThumb Width="0" Height="0" Visibility="Collapsed" ControlPointType="Pivot" Style="{StaticResource RotatorThumbStyle}" x:Name="PART_Pivot"/>
                                    <localControls:DiagramThumb Width="0" Height="0" Visibility="Collapsed" ControlPointType="Rotator" Style="{StaticResource RotatorThumbStyle}" x:Name="PART_Rotator"/>
                                </panels:SelectorPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="235"/>
        </Grid.ColumnDefinitions>

        <!--Initialize Diagram-->
        <local:CustomDiagramControl x:Name="diagramControl"  Grid.Column="0" >

            <!--PageSettings used to enable tha Appearance of Diagram Page.-->
            <local:CustomDiagramControl.ScrollSettings>
                <syncfusion:ScrollSettings ScrollLimit="Diagram"/>
            </local:CustomDiagramControl.ScrollSettings>
            
            <local:CustomDiagramControl.PageSettings>
                <syncfusion:PageSettings PageBackground="White" PageBorderBrush="White"/>
            </local:CustomDiagramControl.PageSettings>

            <!--SnapConstraints used to control the Visibility of Gridlines and enable/disable Snapping.-->
            <local:CustomDiagramControl.SnapSettings>
                <syncfusion:SnapSettings SnapConstraints="All" SnapToObject="All"/>
            </local:CustomDiagramControl.SnapSettings>
            
            <!--Initialize Nodes-->
            <local:CustomDiagramControl.Nodes>
                <syncfusion:DiagramCollection x:Name="nodes">
                    <syncfusion:Node UnitWidth="100" UnitHeight="70" OffsetX="150" OffsetY="220" ZIndex="1"
                                         IsSelected="True" ShapeStyle="{StaticResource nodeshapestyle}"
                                         Shape="{StaticResource Ellipse}">
                        <syncfusion:Node.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content="Default Style" 
                                                                          ViewTemplate="{StaticResource nodeviewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:Node.Annotations>
                    </syncfusion:Node>

                    <syncfusion:Node UnitWidth="100" UnitHeight="70" OffsetX="450" OffsetY="220" ZIndex="2"
                                         IsSelected="True" ShapeStyle="{StaticResource nodeshapestyle}"
                                         Shape="{StaticResource Ellipse}">
                        <syncfusion:Node.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content="Custom Style" 
                                                                          ViewTemplate="{StaticResource nodeviewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:Node.Annotations>
                    </syncfusion:Node>

                    <syncfusion:Node UnitWidth="100" UnitHeight="70" OffsetX="300" OffsetY="370" ZIndex="3"
                                         IsSelected="True" ShapeStyle="{StaticResource nodeshapestyle}"
                                         Shape="{StaticResource Ellipse}">
                        <syncfusion:Node.Annotations>
                            <local:AnnotationCollection>
                                <syncfusion:AnnotationEditorViewModel Content="Visio Style" 
                                                                          ViewTemplate="{StaticResource nodeviewtemplate}"/>
                            </local:AnnotationCollection>
                        </syncfusion:Node.Annotations>
                    </syncfusion:Node>
                </syncfusion:DiagramCollection>
            </local:CustomDiagramControl.Nodes>

            <!--Initialize Connectors-->
            <local:CustomDiagramControl.Connectors>
                <syncfusion:ConnectorCollection/>
            </local:CustomDiagramControl.Connectors>
        </local:CustomDiagramControl>

        <Border  Grid.Column="1" BorderBrush="#dddddd" >
            <Grid >
                <StackPanel  Grid.Column="1"  Background="#f4f4f4f4" >
                    <StackPanel  x:Name="sp" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left">

                        <StackPanel Orientation="Vertical"  VerticalAlignment="Center" HorizontalAlignment="Left" Height="200" Width="235">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"></RowDefinition>
                                    <RowDefinition Height="10"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28"/>
                                    <ColumnDefinition Width="182"/>
                                    <!--<ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="235"/>-->
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Custom Style" FontFamily="Segoe UI" Foreground="#3a3a3a" Background="#f4f4f4"  FontWeight="600" FontSize="18"  HorizontalAlignment="Left"  Grid.Column="1" Margin="0,26,0,0"/>
                                <Rectangle HorizontalAlignment="Stretch" Fill="#dddddd" Height="1.3" Width="182" Grid.Row="1" Grid.Column="1" Margin="0,-11,0,0"></Rectangle>
                                <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
                                    <Viewbox Height="40" Width="500"  >
                                        <RadioButton x:Name="Style4"  Checked="Style1_Checked"  HorizontalAlignment="Left" Height="35" Width="200" >
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Default Style" Height="30" Width="100" Foreground="#3a3a3a" FontWeight="Medium"  FontSize="10.5" FontFamily="Segoe UI" Margin="4,0,0,0" />
                                            </StackPanel>
                                        </RadioButton>
                                    </Viewbox >
                                    <Viewbox Height="40" Width="500" Margin="0,-12,0,0">
                                        <RadioButton x:Name="Style3"  Checked="Style1_Checked"   VerticalAlignment="Bottom" HorizontalAlignment="Left"  Height="35" Width="200" >
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Custom Style" VerticalAlignment="Center" Height="30" Width="100" Foreground="#3a3a3a" FontWeight="Medium" FontSize="10.5" FontFamily="Segoe UI" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </RadioButton>
                                    </Viewbox>
                                    <Viewbox Height="40" Width="500" Margin="0,-12,0,0">
                                        <RadioButton x:Name="Style2" IsChecked="True"  Checked="Style1_Checked"  VerticalAlignment="Center"  HorizontalAlignment="Left" Height="35" Width="200" >
                                            <StackPanel Orientation="Horizontal" >
                                                <TextBlock  Text="Visio Style" VerticalAlignment="Center" Height="30" Width="100" Foreground="#3a3a3a" FontWeight="Medium" FontSize="10.5" FontFamily="Segoe UI" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </RadioButton>
                                    </Viewbox>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</shared:ChromelessWindow>