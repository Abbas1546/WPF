<shared:ChromelessWindow x:Class="ResizerDemo.MainWindow"
    Title="Selector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sf="http://schemas.syncfusion.com/wpf"
    xmlns:local="clr-namespace:ResizerDemo"
    xmlns:common="using:Common"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
    xmlns:panels="clr-namespace:Syncfusion.UI.Xaml.Diagram.Panels;assembly=Syncfusion.SfDiagram.Wpf"
    xmlns:shared="clr-namespace:Syncfusion.Windows.Shared;assembly=Syncfusion.Shared.WPF"
    xmlns:localControls="clr-namespace:Syncfusion.UI.Xaml.Diagram.Controls;assembly=Syncfusion.SfDiagram.Wpf"  
    Template="{StaticResource ChromelessWindowTemplate}"
    Icon="App.ico"
    WindowStartupLocation="CenterScreen"
    Width="1000" Height="650">
    <Window.Resources>

        <!--To Represent ResourceDictionary-->
        <ResourceDictionary>
            <SolidColorBrush x:Key="PathStrokeThemeBrush" Color="#FFFFFFFF" />
            <Style TargetType="{x:Type sf:Node}">
                <Setter Property="UnitWidth" Value="100"/>
                <Setter Property="UnitHeight" Value="60"/>
            </Style>
            <Style x:Key="RotatorThumbStyle" TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Border
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="{TemplateBinding BorderThickness}">
                                <Ellipse Fill="Blue"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
            <Style TargetType="Path" x:Key="QuickCommandstyle">
                <Setter Property="Fill" Value="#4D4D4D"/>
                <Setter Property="StrokeThickness" Value="1"/>
                <Setter Property="Stroke" Value="Transparent"></Setter>
            </Style>
            <!--customStyle-->
            <Style x:Key="NullType" TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="Template" Value="{x:Null}"/>
            </Style>

            <Style x:Key="TopLeftCornerResizerThumpTemplate"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Margin" Value="-5 -5 0 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid >
                                <Rectangle Fill="Transparent"/>
                                <Rectangle  HorizontalAlignment="Stretch" 
            						VerticalAlignment="{TemplateBinding VerticalAlignment}" Height="5" 
            						x:Name="PART_ReseizerThumb3"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="2" Margin="7" Stroke="Blue" Fill="Blue" />

                                <Rectangle  HorizontalAlignment="{TemplateBinding HorizontalAlignment}"  Width="5" 
            						VerticalAlignment="Stretch" 
            						x:Name="PART_ReseizerThumb2"  StrokeDashCap="Flat" StrokeStartLineCap="Round"  StrokeThickness="2" Margin="7" Stroke="Blue" Fill="Blue "  />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="TopRightCornerResizerThumpTemplate"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Margin" Value=" 0 -5 -5 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid >
                                <Rectangle Fill="Transparent"/>
                                <Rectangle HorizontalAlignment="Stretch"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  Height="5" 
            						x:Name="PART_ReseizerThumb3"  StrokeDashCap="Flat" StrokeStartLineCap="Round"  StrokeThickness="2" Margin="7" Stroke="Blue" Fill="Blue "  />

                                <Rectangle    HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="Stretch"   Width="5"
            						x:Name="PART_ReseizerThumb2"  StrokeDashCap="Flat" StrokeStartLineCap="Round"  StrokeThickness="2" Margin="7" Stroke="Blue" Fill="Blue "  />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BottomLeftCornerResizerThumpTemplate"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Margin" Value="-5 0 0 -5"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid>
                                <Rectangle Fill="Transparent"/>
                                <Rectangle HorizontalAlignment="Stretch"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  Height="5" 
            						x:Name="PART_ReseizerThumb3"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="2" Margin="7" Stroke="Blue" Fill="Blue" />

                                <Rectangle   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="Stretch"  Width="5"
            						x:Name="PART_ReseizerThumb2"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="2" Margin="7"  Fill="Blue" Stroke="Blue"  />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BottomRightCornerResizerThumpTemplate"  TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="LightBlue"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Margin" Value="0 0 -5 -5"/>
                <Setter Property="VerticalAlignment" Value="Bottom"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid>
                                <Rectangle Fill="Transparent"/>
                                <Rectangle HorizontalAlignment="Stretch"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  Height="5" 
            						x:Name="PART_ReseizerThumb3"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="2"  Margin="7" Stroke="Blue" Fill="Blue" />

                                <Rectangle HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="Stretch"  Width="5"
            						x:Name="PART_ReseizerThumb2"  StrokeDashCap="Flat" StrokeStartLineCap="Round" StrokeThickness="2" Margin="7" Stroke="Blue"  Fill="Blue" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="CustomSelector" TargetType="{x:Type sf:Selector}">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <Border
            					Background="{TemplateBinding Background}"
            					BorderBrush="{TemplateBinding BorderBrush}"
            					BorderThickness="{TemplateBinding BorderThickness}">
                                <panels:SelectorPanel>
                                    <panels:SelectorPanel.Resources>
                                        <Style x:Key="pathStyle" TargetType="{x:Type Shape}">
                                            <Setter Property="StrokeThickness" Value="1"/>
                                            <Setter Property="Stroke" Value="{StaticResource PathStrokeThemeBrush}"/>
                                        </Style>
                                    </panels:SelectorPanel.Resources>
                                    <Rectangle Style="{StaticResource pathStyle}" Stretch="Fill" StrokeDashArray="2, 2"/>
                                    <Line X1="0" X2="0" Y1="0" Y2="0" StrokeThickness="0" Visibility="Collapsed" StrokeDashArray="2, 2" Style="{StaticResource pathStyle}"/>
                                    <localControls:DiagramThumb x:Name="PART_TopLeft"  ControlPointType="TopLeftResizer"
            							Style="{StaticResource TopLeftCornerResizerThumpTemplate}"
            							HorizontalAlignment="Left" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_Top" ControlPointType="TopResizer"
            							Style="{StaticResource NullType}"
            							HorizontalAlignment="Center" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_TopRight" ControlPointType="TopRightResizer"
            							Style="{StaticResource TopRightCornerResizerThumpTemplate}"
            							HorizontalAlignment="Right" VerticalAlignment="Top"/>
                                    <localControls:DiagramThumb x:Name="PART_Left" ControlPointType="LeftResizer"
            							Style="{StaticResource NullType}"
            							HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    <localControls:DiagramThumb x:Name="PART_Right" ControlPointType="RightResizer"
            							Style="{StaticResource NullType}"
            							HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    <localControls:DiagramThumb x:Name="PART_BottomLeft" ControlPointType="BottomLeftResizer"
            							Style="{StaticResource BottomLeftCornerResizerThumpTemplate}"
            							HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                                    <localControls:DiagramThumb x:Name="PART_Bottom"  ControlPointType="BottomResizer"
            							Style="{StaticResource NullType}"
            							HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                                    <localControls:DiagramThumb x:Name="PART_BottomRight" ControlPointType="BottomRightResizer"
            							Style="{StaticResource BottomRightCornerResizerThumpTemplate}"
            							HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                                    <localControls:DiagramThumb Width="0" Height="0" Visibility="Collapsed" ControlPointType="Pivot" Style="{StaticResource RotatorThumbStyle}" x:Name="PART_Pivot"/>
                                    <localControls:DiagramThumb Width="0" Height="0" Visibility="Collapsed" ControlPointType="Rotator" Style="{StaticResource RotatorThumbStyle}" x:Name="PART_Rotator"/>
                                </panels:SelectorPanel>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- visiostyle-->
            <Style x:Key="TopResizerThumpTemplate1" TargetType="{x:Type localControls:DiagramThumb}">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter Property="Background" Value="Orange"/>
                <Setter Property="Width" Value="25"/>
                <Setter Property="Height" Value="25"/>
                <Setter Property="Margin" Value="0 -5 0 0"/>
                <Setter Property="VerticalAlignment" Value="Top"/>
                <Setter Property="HorizontalAlignment" Value="Stretch"/>
                <Setter Property="Opacity" Value="0.6"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type localControls:DiagramThumb}">
                            <Grid >
                                <Rectangle Fill="Transparent"/>

                                <Border   Height="2" HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}"  Margin="0 -3 0 0"
            						x:Name="PART_ReseizerThumb" CornerRadius="7" 
            						Background="{TemplateBinding Background}"
            						BorderBrush="{TemplateBinding BorderBrush}"
            						BorderThickness="0" />
                                <Rectangle  x:Name="PART_ResizerBorder" HorizontalAlignment="{TemplateBinding HorizontalAlignment}" Width="{TemplateBinding Width}" Height="{TemplateBinding Height}"
            						VerticalAlignment="{TemplateBinding VerticalAlignment}" Fill="Orange" Stroke="OrangeRed"  StrokeThickness="1"
            						Margin="7"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

            </Style>

