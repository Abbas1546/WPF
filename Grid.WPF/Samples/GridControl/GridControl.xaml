<FlowDocument xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Paragraph>Essential Grid WPF Edition is a powerful cell-oriented, extensible grid control that offers excellent performance characteristics and numerous features.</Paragraph>
    <Paragraph>
        <Figure HorizontalAnchor="PageRight"
                VerticalAnchor="PageTop"
                WrapDirection="Left">
            <BlockUIContainer>
                <Grid>
                    <Grid.Resources />
                    <Grid.Background />
                    <StackPanel Orientation="Vertical">

                        <Border Margin="0,5,0,5" CornerRadius="5,5,0,0">
                            <Border.Background />
                            <TextBlock Margin="2,10,0,10"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource HeaderTextStyle}">
                                Featured Samples
                            </TextBlock>
                        </Border>

                        <WrapPanel Margin="10"
                                   TextBlock.FontFamily="Calibri"
                                   TextBlock.FontSize="12">

                            <!--  Excel Like UI  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\excel.png"
                                           Stretch="None"
                                           Tag="Product Showcase\Excel Like UI Demo" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Product Showcase</TextBlock>
                            </StackPanel>

                            <!--  Virtual Grid  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\VirtualGrid.png"
                                           Stretch="None"
                                           Tag="Grid Virtualization\Virtual Grid Demo" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Virtual Grid</TextBlock>
                            </StackPanel>

                            <!--  Trader Grid Test Demo  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\TraderGridTest.png"
                                           Stretch="None"
                                           Tag="Performance\TraderGrid Test Demo" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Trader Grid Test</TextBlock>
                            </StackPanel>

                            <!--  Excel Importing  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\Import.png"
                                           Stretch="None"
                                           Tag="Import\Excel Import\" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Excel Importing</TextBlock>
                            </StackPanel>

                            <!--  Fill Selection  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\FillSelection.png"
                                           Stretch="None"
                                           Tag="Excel Like Features\Excel Like Fill Selection" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Fill Selection</TextBlock>
                            </StackPanel>

                            <!--  Text Format Demo  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\TextFormat.png"
                                           Stretch="None"
                                           Tag="Appearance\Text Format Demo" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Text Format</TextBlock>
                            </StackPanel>

                            <!--  Formula Test Values  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\FormulaTest.png"
                                           Stretch="None"
                                           Tag="Formula Support\Formula Test Values Demo" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Formula Support</TextBlock>
                            </StackPanel>

                            <!--  Excel Export  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\ExcelExport.png"
                                           Stretch="None"
                                           Tag="Export\Excel Export" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Excel Export</TextBlock>
                            </StackPanel>

                            <!--  Zooming  -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center"
                                           Cursor="Hand"
                                           Source="Images\Zooming.png"
                                           Stretch="None"
                                           Tag="Zooming\Zooming" />
                                </Button>
                                <TextBlock Margin="5" HorizontalAlignment="Center">Zooming</TextBlock>
                            </StackPanel>

                          <!--  Excel Like UI  -->
                          <StackPanel Margin="10" Orientation="Vertical">
                            <Button>
                              <Image HorizontalAlignment="Center"
                                     Cursor="Hand"
                                     Source="Images\UndoRedo.png"
                                     Stretch="None"
                                     Tag="Excel Like Features\UndoRedoDemo" />
                            </Button>
                            <TextBlock Margin="5" HorizontalAlignment="Center">Undo Redo Demo</TextBlock>
                          </StackPanel>

                          <!--  Excel Like UI  -->
                          <StackPanel Margin="10" Orientation="Vertical">
                            <Button>
                              <Image HorizontalAlignment="Center"
                                     Cursor="Hand"
                                     Source="Images\GraphicCellDemo.png"
                                     Stretch="None"
                                     Tag="Import\Graphic Cell Demo" />
                            </Button>
                            <TextBlock Margin="5" HorizontalAlignment="Center">Graphic Cell Demo</TextBlock>
                          </StackPanel>

                        </WrapPanel>

                        <!--<Border Margin="0,5,0,5" CornerRadius="5,5,0,0">
                            <Border.Background />
                            <TextBlock Margin="2,10,0,10"
                                       VerticalAlignment="Center"
                                       Style="{DynamicResource HeaderTextStyle}">
                                New Samples
                            </TextBlock>
                        </Border>

                        <WrapPanel Margin="10"
                                   TextBlock.FontFamily="Calibri"
                                   TextBlock.FontSize="12">

                            
                        </WrapPanel>-->
						

                    </StackPanel>
                </Grid>
            </BlockUIContainer>
        </Figure>
    </Paragraph>
</FlowDocument>