                        <WrapPanel Margin="10" TextBlock.FontFamily="Calibri" TextBlock.FontSize="12">

							<!-- Observable Collection -->
                            <StackPanel Margin="10" Orientation="Vertical">
                                <Button>
                                    <Image HorizontalAlignment="Center" Cursor="Hand" Source="Images\ObservableCollectionDemo.png" Stretch="UniformToFill" Tag="DataBinding\Observable Collection Demo"/>
                                </Button>
                                <TextBlock HorizontalAlignment="Center" Margin="5">Data Binding
                                </TextBlock>                            
							</StackPanel>   

							<!-- Cell Editors -->
                            <StackPanel Margin="10" Orientation="Vertical">
