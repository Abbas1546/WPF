<Application x:Class="NestedGridCellEditorsDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="ReorderLevelIndicator">
            <Border BorderBrush="DarkGray"
                        BorderThickness="1"
                        Background="WhiteSmoke"
                        CornerRadius="4">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Images/Information.png" Height="16" Width="16" VerticalAlignment="Center" />
                    <TextBlock Text="Stock is less than reorder level." VerticalAlignment="Center" Height="17" FontSize="12" Foreground="Black" Margin="5"/>
                </StackPanel>
            </Border>
        </DataTemplate>
    </Application.Resources>
</Application>
