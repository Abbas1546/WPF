                <GradientStop Color="#FFC07E2C" Offset="1"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="Series2Interior" EndPoint="1,0.5" StartPoint="0,0.5">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#FF76933A" Offset="0"/>
