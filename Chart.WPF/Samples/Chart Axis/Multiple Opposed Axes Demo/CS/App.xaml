<Application x:Class="MultipleOpposedAxesDemo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf" StartupUri="View/Window1.xaml">
    <Application.Resources>
        <XmlDataProvider Source="..\Model\Datavalues.xml" x:Key="dataval" XPath="Values/Value"/>
<LinearGradientBrush x:Key="SeriesAInterior" EndPoint="1,0.5" StartPoint="0,0.5">
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#FFC07E2C" Offset="0"/>
                <GradientStop Color="#FFFFDD9E" Offset="0.5"/>
                <GradientStop Color="#FFC07E2C" Offset="1"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SeriesBInterior" EndPoint="1,0.5" StartPoint="0,0.5" Opacity="0.8" >
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#FF76933A" Offset="0"/>
                <GradientStop Color="#FFC8E096" Offset="0.5"/>
                <GradientStop Color="#FF76933A" Offset="1"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="SeriesCInterior" EndPoint="1,0.5" StartPoint="0,0.5" >
            <LinearGradientBrush.GradientStops>
                <GradientStop Color="#FF4A6285" Offset="0"/>
                <GradientStop Color="#FFABBAD1" Offset="0.5"/>
                <GradientStop Color="#FF4A6285" Offset="1"/>
            </LinearGradientBrush.GradientStops>
        </LinearGradientBrush>   
    </Application.Resources>
</Application>
