            <Point X="400000" Y="20"/>
            <Point X="410000" Y="15"/>
            <Point X="420000" Y="10"/>
            <Point X="430000" Y="15"/>
            <Point X="440000" Y="20"/>
            <Point X="450000" Y="25"/>
            <Point X="460000" Y="20"/>
