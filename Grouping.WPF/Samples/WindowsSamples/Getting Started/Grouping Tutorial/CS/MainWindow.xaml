<syncfusion:ChromelessWindow x:Class="GroupingTutorial.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:interaction="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:action="clr-namespace:GroupingTutorial" 
        xmlns:local="clr-namespace:GroupingTutorial" 
        x:Name="mainWindow"
        Title="Grouping Tutorial" Height="576" Width="716" syncfusion:SkinStorage.VisualStyle="Metro"  BorderBrush="#FF3399FF"
        WindowStartupLocation="CenterScreen" xmlns:syncfusion="http://schemas.syncfusion.com/wpf" Icon="/GroupingTutorial_2010;component/Icon/sfgrid.ico">
    <syncfusion:ChromelessWindow.DataContext>
        <local:ViewModel/>
    </syncfusion:ChromelessWindow.DataContext>
    <Grid>
        <Button Content="Sorted on B using Default Sort" Height="31" HorizontalAlignment="Left" Margin="10,10,0,0" Name="button1" VerticalAlignment="Top" Width="177" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Sorted on B using Custom Sort" Height="31" HorizontalAlignment="Left" Margin="10,47,0,0" Name="button2" VerticalAlignment="Top" Width="177"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Group by property C" Height="31" HorizontalAlignment="Left" Margin="206,10,0,0" Name="button3" VerticalAlignment="Top" Width="177"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Group by properties C and D" Height="31" HorizontalAlignment="Left" Margin="206,47,0,0" Name="button4" VerticalAlignment="Top" Width="177"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Filter" Height="31" HorizontalAlignment="Left" Margin="405,10,0,0" Name="button5" VerticalAlignment="Top" Width="110" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Summary"  Height="31" HorizontalAlignment="Left" Margin="532,10,0,0" Name="button6" VerticalAlignment="Top" Width="144" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <TextBox  Height="427" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="12,98,0,0" Name="textBox1" Text="{Binding TextBox1}" VerticalAlignment="Top" Width="371" />
        <Button Content="Clear Sorts/Filters/Groups" Height="28" HorizontalAlignment="Left" Margin="405,98,0,0" Name="button7" VerticalAlignment="Top" Width="271" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Clear the Display Text" Height="31" HorizontalAlignment="Left" Margin="405,146,0,0" Name="button8" VerticalAlignment="Top" Width="271"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Display Raw Data" Height="33" HorizontalAlignment="Left" Margin="405,196,0,0" Name="button9" VerticalAlignment="Top" Width="271"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Reset Raw Data" Height="31" HorizontalAlignment="Left" Margin="500,250,0,0" Name="button10" VerticalAlignment="Top" Width="176" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Iterate Thru DisplayElements" Height="31" HorizontalAlignment="Left" Margin="405,299,0,0" Name="button11" VerticalAlignment="Top" Width="271" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Iterate Thru Elements" Height="31" HorizontalAlignment="Left" Margin="405,347,0,0" Name="button12" VerticalAlignment="Top" Width="271"  >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Iterate Thru FilteredRecords" Height="31" HorizontalAlignment="Left" Margin="405,395,0,0" Name="button13" VerticalAlignment="Top" Width="271" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="Iterate Thru Records" Height="31" HorizontalAlignment="Left" Margin="405,444,0,0" Name="button14" VerticalAlignment="Top" Width="271" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="ExpandAll" Height="31" HorizontalAlignment="Left" Margin="405,494,0,0" Name="button15" VerticalAlignment="Top" Width="129" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <Button Content="CollapseAll" Height="31" HorizontalAlignment="Left" Margin="552,494,0,0" Name="button16" VerticalAlignment="Top" Width="124" >
            <interaction:Interaction.Triggers>
                <interaction:EventTrigger EventName="Click">
                    <action:ButtonAction TargetName="mainWindow" />
                </interaction:EventTrigger>
            </interaction:Interaction.Triggers>
        </Button>
        <TextBox Height="23" HorizontalAlignment="Left" Margin="408,52,0,0" Name="filterString" VerticalAlignment="Top" Width="107" Text="{Binding FilterString}" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="532,52,0,0" Name="summaryMappingName" VerticalAlignment="Top" Width="40" ItemsSource="{Binding ListOfSummaryType}">
            <interaction:Interaction.Behaviors>
                <local:SelectionBehavior  SelectedItem="{Binding SelectedItem,Mode=TwoWay}" />
            </interaction:Interaction.Behaviors>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SummaryType}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="578,52,0,0" Name="summaryType" VerticalAlignment="Top" Width="98" ItemsSource="{Binding ListOfSummaryMapping}">
            <interaction:Interaction.Behaviors>
                <local:SelectionBehavior  SelectedItem="{Binding SelectedItem,Mode=TwoWay}" />
            </interaction:Interaction.Behaviors>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SummaryMapping}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <syncfusion:UpDown HorizontalAlignment="Left" Margin="405,256,0,0" Name="itemCount" VerticalAlignment="Top" Width="65" Value="10" />
    </Grid>
</syncfusion:ChromelessWindow>
