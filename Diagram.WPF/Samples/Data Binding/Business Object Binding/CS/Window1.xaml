<Window x:Class="BusinessObjectBindingDemo_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Business Object Binding" Height="700" Width="1000"
    WindowState="Maximized" WindowStartupLocation="CenterScreen"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
       syncfusion:SkinStorage.VisualStyle="Office2010Blue" 
    xmlns:local="clr-namespace:BusinessObjectBindingDemo_2008"
    Icon="App.ico"  Style="{StaticResource windowStyle}">
    
    <!--Resources-->
    <Window.Resources>
        <ResourceDictionary>            
            <!--Gets the resources from the Shared Library-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Shared.WPF;component/SkinManager/SkinManager.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!--The business objecy which contains the data to be binded.-->
            <local:CountrySalesList x:Key="myList"/>
            <!--Creating a hierarchical data from the XML data for generating a tree view-->
            <HierarchicalDataTemplate x:Key="dataTemplate" ItemsSource="{Binding Path=RegionSales}" DataType="{x:Type local:CountrySale}">
                <HierarchicalDataTemplate.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Path=Earnings}"   DataType="{x:Type local:RegionSale}">
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate DataType="{x:Type local:Sale}">
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </HierarchicalDataTemplate.ItemTemplate>
            </HierarchicalDataTemplate>

            <LinearGradientBrush x:Key="myBack" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE1EDFA" Offset="0.095"/>
                <GradientStop Color="#FFD2E0EF" Offset="0.839"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Window.Resources>
    
    <!--Control Area-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="9.3*"/>
        </Grid.RowDefinitions>
        
          <!--Header Area-->
        <Grid Background="{StaticResource myBack}" >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Margin="940,0,0,8" FontWeight="Normal" Foreground="#FF284360" FontSize="32" Text="Business Object Binding" FontFamily="Segoe UI"  HorizontalAlignment="Right" VerticalAlignment="Center" />
