            </StackPanel>
            <!--<TextBlock Text="Business Object Binding Sample" VerticalAlignment="Center" FontSize="25" HorizontalAlignment="Center"/>--> 
        </Grid>
        
        <!--Control Area-->
        <syncfusion:DiagramControl  Grid.Row="1">
            <!-- Model to add nodes and connections-->
            <syncfusion:DiagramControl.Model>
                <syncfusion:DiagramModel  x:Name="diagramModel"  LayoutType="DirectedTreeLayout"  ItemsSource="{Binding Source={StaticResource myList}}" ItemTemplate="{StaticResource dataTemplate}" >
                </syncfusion:DiagramModel>
            </syncfusion:DiagramControl.Model>            
            <!--View to display nodes and connections added through model.-->
            <syncfusion:DiagramControl.View >
                <syncfusion:DiagramView IsPageEditable="False" Name="view" Bounds="0,0,1250,100" ShowHorizontalGridLine="True" ShowVerticalGridLine="True" >
                    <!--Horizontal ruler declaration-->
                    <syncfusion:DiagramView.HorizontalRuler>
                        <syncfusion:HorizontalRuler />
                    </syncfusion:DiagramView.HorizontalRuler>
                    <!--Vertical ruler declaration-->
                    <syncfusion:DiagramView.VerticalRuler>
                        <syncfusion:VerticalRuler />
                    </syncfusion:DiagramView.VerticalRuler>
                </syncfusion:DiagramView>
            </syncfusion:DiagramControl.View>
        </syncfusion:DiagramControl>
    </Grid>
</Window>
