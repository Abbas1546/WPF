<Window x:Class="LineConnectorDemo_2010.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Line Connector" Height="650" Width="925" WindowState="Maximized" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" syncfusion:SkinStorage.VisualStyle="Office2010Blue" Icon="App.ico" Style="{StaticResource windowStyle}"
        xmlns:syncshared="clr-namespace:Syncfusion.Windows.Tools.Controls;assembly=Syncfusion.Shared.Wpf">

    <!--Resources-->
    <Window.Resources>
        <ResourceDictionary>
            <!--Gets the resources from the Shared Library-->
            <ResourceDictionary.MergedDictionaries>
                <!--<ResourceDictionary Source="/Syncfusion.VectorImages.WPF;component/Icons/Computer.xaml" />-->
                <ResourceDictionary Source="/Syncfusion.Shared.WPF;component/SkinManager/SkinManager.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="myBack" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE1EDFA" Offset="0.095"/>
                <GradientStop Color="#FFD2E0EF" Offset="0.839"/>
            </LinearGradientBrush>
            <CollectionViewSource x:Key="sysFonts" Source= "{x:Static Fonts.SystemFontFamilies}" />

            <!--Style to the Path-->
            <Style TargetType="{x:Type Path}" x:Key="D1">
                <Setter Property="Stroke" Value="Red" />
                <Setter Property="StrokeThickness" Value="2"/>
                <Setter Property="StrokeDashArray" Value="2,2"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!--Customization Area-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height=".8*"/>
            <RowDefinition Height="9.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="335"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="Scroll111" Margin="1" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">

                <Border BorderBrush="AliceBlue" BorderThickness="2,0,0,0">
                    <StackPanel>
                        <Border Background="#FFBECEE0" Height="40">
                            <TextBlock Foreground="#FF284360" FontSize="21.333" FontFamily="Segoe UI" Text="Properties" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"  FontWeight="Normal" ></TextBlock>
                        </Border>
                        <Border Padding="5,5,5,5" >
                            <StackPanel Orientation="Vertical" Margin="5">
                                <!--Diagramview Property-->
                                <Expander Header="DiagramView Property" IsExpanded="True">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,0" IsEnabled="{Binding ElementName=lcselected, Path=IsChecked}">
                                        <GroupBox BorderThickness="0.2" BorderBrush="LightGray">
                                            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="150"></ColumnDefinition>
                                                            <ColumnDefinition Width="150"/>
                                                        </Grid.ColumnDefinitions>
                                                        <!--LineBridgeEnabled-->
                                                        <TextBlock Text="LineBridgingEnabled" VerticalAlignment="Center" />
                                                        <CheckBox Name="LineBridgeenabled1" ToolTip="Enable LineBridging" Grid.Column="1" VerticalAlignment="Center" Click="LineBridgeenabled1_Click"/>
                                                    </Grid>
                                                </StackPanel>
                                            </StackPanel>
                                        </GroupBox>
                                    </StackPanel>
                                </Expander>

                                <!--Line Style-->
                                <Expander Name="LineStyleExpander" Header="LineStyle and DecoratorStyle" Margin="0,10,0,0" IsExpanded="True" ToolTip="Select a LineConnector">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,0" IsEnabled="{Binding ElementName=lcselected, Path=IsChecked}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <!--Stroke-->
                                            <TextBlock Text="Stroke" Margin="0,2,0,0" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <syncshared:ColorPickerPalette Grid.Column="1" Grid.Row="0" Height="22" Margin="0,2,0,0" IsExpanded="False" Name="ShapeStrokeColor" ColorChanged="ShapeStrokeColor_ColorChanged"/>
                                            <!--StrokeThickness-->
                                            <TextBlock Text="StrokeThickness" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                            <syncfusion:DoubleTextBox Background="#FFE1EDFA" UseNullOption="True" NullValue="{x:Null}" Name="lcStrokeThickness" Grid.Column="1" Grid.Row="1" Margin="0,2,0,0" TextChanged="lcStrokeThickness_changed" Text="2" MaxLength="5"/>

                                            <!--StrokeDashArray-->
                                            <TextBlock Text="StrokeDashArray" Grid.Row="2" Grid.Column="0" Margin="0,2,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <TextBox Name="lcStrokeDashArray" Grid.Row="2" Grid.Column="1" Margin="0,2,0,0" TextChanged="lcStrokeDashArray_changed" Text="1, 0" Grid.ColumnSpan="2" MaxLength="5"/>
                                        </Grid>
                                        <StackPanel Orientation="Vertical" Margin="0,2,0,0">
                                            <!--HeadDecoratorShape-->
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="HeadDecoratorShape" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                    <ComboBox Margin="0,2,0,0" Name="HeadDecoratorshape" Grid.Column="1" SelectedIndex="0" SelectionChanged="HeadDecoratorshape_SelectionChanged">
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>

                                            <!--CustomHeadDecoratorStyle-->
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="CustomHeadDecoratorStyle" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                    <ComboBox Margin="0,2,0,0" Name="HeadDecoratorstyle" Grid.Column="1" IsEnabled="False" SelectedIndex="3" SelectionChanged="HeadDecoratorstyle_SelectionChanged">
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style1"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 63.9168,177.986L 96.6082,224.775L 63.6994,272.667L 198.327,224.958L 63.9168,177.986 Z " Height="15" Fill="Magenta" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style2"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 335.432,360.902L 464.875,279.999L 335.432,199.098L 448.693,279.999L 335.432,360.902 Z M 319.125,237.365L 346.793,280.083L 319.125,322.637L 403.745,280.083L 319.125,237.365 Z  " Height="15" Fill="MidnightBlue" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style3"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 826.794,228.082L 700.29,164.831C 700.29,164.831 714.284,178.879 723.652,197.585C 713.876,200.228 705.994,207.432 702.403,216.775C 698.141,218.768 695.169,223.064 695.169,228.082C 695.169,233.099 698.141,237.395 702.403,239.389C 705.994,248.73 713.876,255.936 723.652,258.578C 714.284,277.284 700.29,291.333 700.29,291.333L 826.794,228.082 Z " Height="15" Fill="DarkGreen" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >None</ComboBoxItem>
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>

                                            <!--TailDecoratorShape-->
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="TailDecoratorShape" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                    <ComboBox Margin="0,2,0,0" Name="TailDecoratorshape" Grid.Column="1" SelectedIndex="1" SelectionChanged="TailDecoratorshape_SelectionChanged">
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>

                                            <!--CustomTailDecoratorStyle-->
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="CustomTailDecoratorStyle" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                    <ComboBox Margin="0,2,0,0" Name="TailDecoratorstyle" Grid.Column="1" IsEnabled="False" SelectedIndex="3" SelectionChanged="TailDecoratorstyle_SelectionChanged">
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style1"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 350.348,321.655L 392,300.828L 392,342.479L 454.479,280L 392,217.521L 392,259.172L 350.348,238.349L 329.521,259.172L 329.521,300.828L 350.348,321.655 Z " Height="15" Fill="Magenta" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style2"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 54.4034,502.68L 104.594,452.492L 54.4034,402.303C 48.4633,396.363 38.8344,396.363 32.8943,402.303C 26.9542,408.242 26.9542,417.872 32.8943,423.811L 61.574,452.491L 32.8943,481.17C 26.9542,487.11 26.9542,496.74 32.8943,502.68C 38.8344,508.62 48.4633,508.62 54.4034,502.68 Z " Height="15" Fill="MidnightBlue" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >
                                                            <StackPanel Orientation="Horizontal">
                                                                <TextBlock Text="Style3"/>
                                                                <Path Margin="15,0,0,0" Stretch="Fill" Data="F1 M 220.661,473.49L 183.026,451.761L 183.026,459.074L 170.359,451.761L 170.359,495.219L 183.026,487.906L 183.026,495.219L 220.661,473.49 Z" Height="15" Fill="DarkGreen" HorizontalAlignment="Center" Width="20"/>
                                                            </StackPanel>
                                                        </ComboBoxItem>
                                                        <ComboBoxItem >None</ComboBoxItem>
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>

                                            <!--DecoratorAdornerStyle-->
                                            <StackPanel>
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="DecoratorAdornerStyle" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                    <ComboBox Name="decratoradorner" Margin="0,2,0,0" Grid.Column="1" SelectedIndex="3" SelectionChanged="decratoradorner_SelectionChanged">
                                                        <ComboBoxItem>Style1</ComboBoxItem>
                                                        <ComboBoxItem>Style2</ComboBoxItem>
                                                        <ComboBoxItem>Style3</ComboBoxItem>
                                                        <ComboBoxItem>None</ComboBoxItem>
                                                    </ComboBox>
                                                </Grid>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!--Label-->
                                <Expander Name="LabelExpander" Header="Label" Margin="0,10,0,0" IsExpanded="True" ToolTip="Select a LineConnector">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,0" IsEnabled="{Binding ElementName=lcselected, Path=IsChecked}">
                                        <!--Label-->
                                        <StackPanel>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Label" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <TextBox Name="lclabel" Grid.Column="1" TextChanged="lclabelchnaged" Margin="0,2,0,0"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--IsLabelEditable-->
                                        <StackPanel Margin="0,3,0,3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="IsLabelEditable" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <CheckBox Name="lclabeledit" ToolTip="Disable LabelEditing"  Grid.Column="1" Margin="0,2,0,0" VerticalAlignment="Center" IsChecked="True" Click="lclabeleditclick"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--EnableMultilineLabel-->
                                        <StackPanel Margin="0,3,0,3" IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="EnableMultilineLabel" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <CheckBox Name="lcenablemultilinelabel" ToolTip="Enable MultiLineLable" Margin="0,2,0,0" Grid.Column="1" VerticalAlignment="Center" Click="lcenablemultiline_click"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelHorzontalAlignment-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelHorizontalAlignment" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lclblhoralign" Grid.Column="1" Margin="0,2,0,0" SelectedIndex="3" SelectionChanged="lclblhoralign_SelectionChanged">
                                                </ComboBox>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelVisibility-->
                                        <StackPanel Margin="0,3,0,3" IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelVisibility" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <CheckBox Name="lcLabelVisibility" ToolTip="Collapsed" Grid.Column="1" Margin="0,2,0,0" IsChecked="True" VerticalAlignment="Center" Click="lcvisibilitychanged"/>
                                            </Grid>

                                        </StackPanel>

                                        <!--TextWrapping-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="TextWrapping" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lclbltextwrap" Grid.Column="1" Margin="0,2,0,0" SelectedIndex="1" SelectionChanged="lclbltextwrap_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelWidth-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelWidth" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <TextBox Name="lclblwidth" Grid.Column="1" Margin="0,2,0,0" TextChanged="lclblwidth_TextChanged" Text="NaN"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--FontSize-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="FontSize" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <syncfusion:IntegerTextBox Name="lcfontsize"  Grid.Column="1" Margin="0,2,0,0" TextChanged="lcfontsize_TextChanged" Text="11" MaxLength="4" />
                                            </Grid>
                                        </StackPanel>

                                        <!--FontWeight-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="FontWeight" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lcfontweight" Grid.Column="1" Margin="0,2,0,0" SelectedIndex="4" SelectionChanged="lcfontweight_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelForeground-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelForeground" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <syncshared:ColorPickerPalette Grid.Column="1" Margin="0,2,0,0" Height="22" IsExpanded="False" Name="ShapeStrokeColor1" ColorChanged="ShapeStrokeColor1_ColorChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelFontStyle-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelFontStyle" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lcfontStyle" Grid.Column="1" Margin="0,2,0,0" SelectedIndex="0" SelectionChanged="lcfontStyle_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--FontFamily-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="FontFamily" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lcfontfamily" Grid.Column="1" Margin="0,2,0,0" ItemsSource= "{Binding Source= {StaticResource sysFonts}}" SelectionChanged="lcfontfamily_FontsSourceChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelTextTrimming-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelTextTrimming" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lctriming" Margin="0,2,0,0" Grid.Column="1"  SelectedIndex="0" SelectionChanged="lctriming_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelTextAlignment-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelTextAlignment" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lclabeltextalignment" Margin="0,2,0,0" Grid.Column="1" SelectedIndex="0" SelectionChanged="lclabeltextalignment_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelTextDecorations-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelTextDecorations" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lclabeltextdecorations" Margin="0,2,0,0" Grid.Column="1" SelectedIndex="0" SelectionChanged="lclabeltextdecorations_SelectionChanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelTemplate-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelTemplate" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Name="lbltemplate" Margin="0,2,0,0" Grid.Column="1" SelectedIndex="3" SelectionChanged="lbltemplate_SelectionChanged">
                                                    <ComboBoxItem>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="LabelTemplate1"/>
                                                            <Image Margin="5,0,0,0" Source="/Images/image1.png" Width="20" Height="15" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="LabelTemplate2" Foreground="Blue"/>
                                                            <Image Margin="5,0,0,0" Source="/Images/image11.jpg" Width="20" Height="15" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>
                                                        <StackPanel Orientation="Horizontal">
                                                            <TextBlock Text="LabelTemplate3" Foreground="Red" />
                                                            <Image Margin="5,0,0,0" Source="/Images/image10.jpg" Width="20" Height="15" HorizontalAlignment="Center"/>
                                                        </StackPanel>
                                                    </ComboBoxItem>
                                                    <ComboBoxItem>None</ComboBoxItem>
                                                </ComboBox>
                                            </Grid>
                                        </StackPanel>

                                        <!--LabelTemplateHorzontalAlignment-->
                                        <StackPanel IsEnabled="{Binding ElementName=lclabeledit, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="LabelTemplateHorizontalAlignment" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,2,0,0"/>
                                                <ComboBox Margin="0,2,0,0" Name="lctlblhoralign" Grid.Column="1" SelectedIndex="3" SelectionChanged="lctlblhoralign_SelectionChanged">
                                                </ComboBox>
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!--Basic proeprty-->
                                <Expander Name="OthersExpander" Header="Others" Margin="0,10,0,0" IsExpanded="True" ToolTip="Select a LineConnector">
                                    <StackPanel Orientation="Vertical" Margin="0,5,0,0">

                                        <!--ConnectorType-->
                                        <StackPanel IsEnabled="{Binding ElementName=lcselected, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="ConnectorType" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                <ComboBox Name="ctcombo" Grid.Column="1"  Margin="0,2,0,0" SelectionChanged="ctcombo_SelectionChanged">
                                                </ComboBox>
                                            </Grid>
                                        </StackPanel>

                                        <!--IsSelected-->
                                        <StackPanel Margin="0,3,0,3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="IsSelected" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,2,0,0"/>
                                                <CheckBox Name="lcselected" Grid.Column="1" Margin="0,2,0,0"  VerticalAlignment="Center" IsChecked="False" Click="lcselectedchanged"/>
                                            </Grid>
                                        </StackPanel>

                                        <!--StartPointPosition-->
                                        <StackPanel IsEnabled="{Binding ElementName=lcselected, Path=IsChecked}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"></ColumnDefinition>
