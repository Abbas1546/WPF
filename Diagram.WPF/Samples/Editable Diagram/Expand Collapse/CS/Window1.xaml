<Window x:Class="ExpandCollapseDemo_2008.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" syncfusion:SkinStorage.VisualStyle="Office2010Blue"
    Title="Expand Collapse" WindowState="Maximized" Name="mainwindow"
    xmlns:syncfusion="http://schemas.syncfusion.com/wpf" Width="900" Height="700" WindowStartupLocation="CenterScreen"
    Icon="App.ico" FontWeight="Bold" 
    >
    <!--Resources-->
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Shared.WPF;component/SkinManager/SkinManager.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="myBack" EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE1EDFA" Offset="0.095"/>
                <GradientStop Color="#FFD2E0EF" Offset="0.839"/>
            </LinearGradientBrush>

            <!-- DataTemplate for Node -->
            <DataTemplate x:Key="NodeTemplate">
                <Grid Loaded="img_Loaded" Name="gr">
                    <Border>
                        <Image Name="Image" Tag="{Binding  RelativeSource={RelativeSource AncestorType=syncfusion:Node}}" Source="{Binding Person}">

                        </Image>
                    </Border>
                    <Border BorderBrush="Red" Width="15" Height="15" HorizontalAlignment="Center" VerticalAlignment="Bottom" MouseDown="Image_MouseDown" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
                        <Image Name="Expander" Tag="{Binding  RelativeSource={RelativeSource AncestorType=syncfusion:Node}}" Source="{Binding Expander}"/>
                    </Border>
                </Grid>
            </DataTemplate>

            <!--Style to a Node-->
            <Style TargetType="{x:Type syncfusion:Node}" x:Key="newtemp">
                <Setter Property="LabelHorizontalAlignment" Value="Center"/>
                <Setter Property="LabelVerticalAlignment" Value="Top"/>
                <Setter Property="IsPortEnabled" Value="False"/>
                <Setter Property="Width" Value="80"/>
                <Setter Property="Height" Value="75"/>
                <Setter Property="ContentTemplate" Value="{StaticResource NodeTemplate}"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <!--Grid Area-->
    <Grid>
        <Border>
            <Grid x:Name="GridRoot" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="9.4*"/>
                </Grid.RowDefinitions>

                <!--Top Area-->
                <Grid Background="{StaticResource myBack}" Grid.Row="0" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <TextBlock Margin="1040,0,0,8" FontWeight="Normal" Foreground="#FF284360" FontSize="32" Text="Expand Collapse " FontFamily="Segoe UI"  HorizontalAlignment="Right" VerticalAlignment="Center" />
                    <Path Margin="20,0,0,4" Data="M27.573,21.885726 C26.039659,21.885726 24.796639,23.128786 24.796639,24.662178 L24.796639,37.3311 C24.796639,38.864491 26.039659,40.107552 27.573,40.107552 L40.064701,40.107552 C41.598042,40.107552 42.841061,38.864491 42.841061,37.3311 L42.841061,24.662178 C42.841061,23.128786 41.598042,21.885726 40.064701,21.885726 z M3.9060001,2.3436508 C2.9710598,2.3436508 2.2131386,3.1015863 2.2131386,4.0365477 L2.2131386,11.76122 C2.2131386,12.69618 2.9710598,13.454117 3.9060001,13.454117 L11.522699,13.454117 C12.457641,13.454117 13.21556,12.69618 13.21556,11.76122 L13.21556,4.0365477 C13.21556,3.1015863 12.457641,2.3436508 11.522699,2.3436508 z M2.7341995,0 L12.8898,0 C14.399857,0 15.624,1.2241688 15.624,2.7342587 L15.624,12.737741 C15.624,14.247831 14.399857,15.472 12.8898,15.472 L8.75,15.472 8.75,29.653 21.167,29.653 21.167,22.526347 C21.167,20.049711 23.174645,18.042 25.6512,18.042 L42.306801,18.042 C44.783356,18.042 46.791,20.049711 46.791,22.526347 L46.791,38.932653 C46.791,41.40929 44.783356,43.417 42.306801,43.417 L25.6512,43.417 C23.174645,43.417 21.167,41.40929 21.167,38.932653 L21.167,32.403 7.3190002,32.403 C6.5596085,32.403 5.9440002,31.787392 5.9440002,31.028 5.9440002,30.933076 5.953619,30.840399 5.9719353,30.75089 L6,30.641743 6,15.472 2.7341995,15.472 C1.2241421,15.472 0,14.247831 0,12.737741 L0,2.7342587 C0,1.2241688 1.2241421,0 2.7341995,0 z" Fill="#FF8FABCA" HorizontalAlignment="Right" Height="39.417"  Stretch="Fill"  VerticalAlignment="Center" Width="46.791"/>
                    </StackPanel>
                </Grid>

                <!--</Property Area>-->
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!--Diagram Control-->
                  
                        <Border  Grid.Row="0" Grid.Column="0">
                            <!--Diagram Control-->
                        <syncfusion:DiagramControl Name="diagramControl" Grid.Row="1" IsSymbolPaletteEnabled="{Binding ElementName=Palette, Path=IsChecked, Mode=TwoWay}">
                                <!-- Model to add nodes and connections-->
                                <syncfusion:DiagramControl.Model>
                                    <syncfusion:DiagramModel LayoutType="DirectedTreeLayout" Orientation="TopBottom" x:Name="diagramModel">
                                    </syncfusion:DiagramModel>
                                </syncfusion:DiagramControl.Model>

                                <!--View to display nodes and connections added through model.-->
                                <syncfusion:DiagramControl.View>
                                    <syncfusion:DiagramView Background="White" Name="diagramView" Bounds="0,0,900,100"  >
                                    </syncfusion:DiagramView>
                                </syncfusion:DiagramControl.View>
                            </syncfusion:DiagramControl>
                        </Border>

                    <!--Properties Area-->
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0" Grid.Column="1">
                        <Border BorderBrush="AliceBlue" BorderThickness="2,0,0,0">
                            <StackPanel>
                                <Border Background="#FFBECEE0" Height="40">
                                    <TextBlock Foreground="#FF284360" FontSize="21.333" FontFamily="Segoe UI" Text="Properties" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center"  FontWeight="Normal" ></TextBlock>
                                </Border>
                                <Border Padding="5,5,5,5" >
                                 
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="150"></ColumnDefinition>
                                                <ColumnDefinition Width="*"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <!--HorizontalSpacing-->
                                            <TextBlock Text="HorizontalSpacing" FontWeight="Normal" Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"></TextBlock>
                                        <syncfusion:DoubleTextBox Background="#FFE1EDFA" UseNullOption="True" Value="0" Margin="0,5,0,0"  Name="Hspace" Grid.Column="1" FontWeight="Normal" VerticalAlignment="Center" Grid.Row="0" TextChanged="TextBox_TextChanged" MaxLength="5"></syncfusion:DoubleTextBox>
                                            <!--VerticalSpacing-->
                                            <TextBlock Text="VerticalSpacing" FontWeight="Normal" Margin="0,5,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"></TextBlock>
                                        <syncfusion:DoubleTextBox Background="#FFE1EDFA" UseNullOption="True" Value="60" Name="Vspace" Margin="0,5,0,0" FontWeight="Normal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" TextChanged="TextBox_TextChanged" MaxLength="5"></syncfusion:DoubleTextBox>
                                            <!--SpaceBetweenSubTrees-->
                                            <TextBlock Text="SpaceBetweenSubTrees" FontWeight="Normal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0"></TextBlock>
                                        <syncfusion:DoubleTextBox Background="#FFE1EDFA" UseNullOption="True" Value="0" Name="Sspace" FontWeight="Normal" Margin="0,5,0,0" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" TextChanged="TextBox_TextChanged" MaxLength="5"></syncfusion:DoubleTextBox>
                                            <!--Tree Orientation-->
                                            <TextBlock Text="TreeOrientation" FontWeight="Normal" Margin="0,5,0,0" Height="30"  HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0"></TextBlock>
                                        <ComboBox FontWeight="Normal" VerticalAlignment="Center" Margin="0,5,0,0"  Grid.Row="3" Grid.Column="1" SelectedIndex="0">
                                                <ComboBoxItem Selected="ComboBoxItem_Selected_16">Top-to-Bottom</ComboBoxItem>
                                                <ComboBoxItem Selected="ComboBoxItem_Selected17">Bottom-to-Top</ComboBoxItem>
                                                <ComboBoxItem Selected="ComboBoxItem_Selected_18">Left-to-Right</ComboBoxItem>
                                                <ComboBoxItem Selected="ComboBoxItem_Selected_19">Right-to-Left</ComboBoxItem>
                                            </ComboBox>
                                            <!--IsSymbolpaletteEnabled-->
                                            <TextBlock Text="IsSymbolpaletteEnabled" FontWeight="Normal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,5,0,0" Grid.Row="4" Grid.Column="0"></TextBlock>
                                            <CheckBox Grid.Row="4" Grid.Column="1" Name="Palette"  Margin="0,5,0,0" IsChecked="True" ToolTip="Show/HideSymbolpalette"></CheckBox>
                                        </Grid>
                                    
                                </Border>
                            </StackPanel>
                        </Border>
                    </ScrollViewer>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
