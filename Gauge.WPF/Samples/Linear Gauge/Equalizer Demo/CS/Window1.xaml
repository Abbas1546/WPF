        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Syncfusion.Shared.WPF;component/SkinManager/SkinManager.xaml" />
            </ResourceDictionary.MergedDictionaries>              
            <GeometryGroup x:Key="slider">
                <Geometry>M 6,-4 A 5,5 0 0 1 24,-4 L 24,14 A 5,5 0 0 1 6,14 L 6,-4 Z</Geometry>
            </GeometryGroup>
            <GeometryGroup x:Key="scale">
                <Geometry>M 0,-5 A 5,5 0 0 1 20,-5 L 20,295 A 5,5 0 0 1 0,295 L 0,-5 Z</Geometry>
            </GeometryGroup>
        </ResourceDictionary>
    </Window.Resources>

