                                    <syncfusion:LinearMarkTick TickStyle="MajorTick" 
                                                               TickHeight="8" TickWidth="1"
                                                               TickPlacement="Inside"  
                                                               BackgroundBrush="{StaticResource markbg}"
                                                               TickShape="Rectangle"/>
                                </syncfusion:LinearScale.Ticks>
