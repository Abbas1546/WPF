        <!--Interactivity Area-->
        <Border BorderBrush="Black" BorderThickness="1" Margin="10" CornerRadius="0,0,10,10" Grid.Column="1">
            <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <!-- SkinPicker for changing the skin of window -->
                <syncfusion:SkinPicker Skin="Office2007Blue" VerticalContentAlignment="Top" />
                
                <Expander IsExpanded="True"  Header="Automated Demo" Name="Features"  >
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <!-- Auto-Adjust -->
                        <GroupBox Header="Demo">
                            <StackPanel Margin="5"  Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Margin="3" Width="75" Content="Start" Click="StartButton_Click"/>
                                <Button Margin="3" Width="75"  Content="Stop" Click="StopButton_Click"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Expander>                
               
                <StackPanel Orientation="Vertical">
                    <!-- Auto-Adjust -->
                    <Expander IsExpanded="True" Header="Manual Adjustment" >                    
                        <StackPanel Margin="5,5,5,5"  Orientation="Vertical" HorizontalAlignment="Center">
                            <GroupBox Header="Select Frequency">
                                <StackPanel Orientation="Horizontal">
                                    <Label>Frequency :</Label>
                                    <ComboBox SelectedIndex="0" Width="75" 
                                              SelectionChanged="FrequencyComboBox_SelectionChanged">
                                        <ComboBoxItem>31 Hz</ComboBoxItem>
                                        <ComboBoxItem>63 Hz</ComboBoxItem>
                                        <ComboBoxItem>125 Hz</ComboBoxItem>
                                        <ComboBoxItem>250 Hz</ComboBoxItem>
                                        <ComboBoxItem>500 Hz</ComboBoxItem>
                                        <ComboBoxItem>1 kHz</ComboBoxItem>
                                        <ComboBoxItem>2 kHz</ComboBoxItem>
                                        <ComboBoxItem>4 kHz</ComboBoxItem>
                                        <ComboBoxItem>8 kHz</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>
                            <GroupBox Header="Slider Value">
                                <Slider Name="slider" Minimum="0" Maximum="100" 
                                        ValueChanged="Slider_ValueChanged"/>
                            </GroupBox>                            
                            <GroupBox Header="Reset Options">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Margin="3" Width="75" Click="ResetButton_Click">Reset</Button>
                                    <Button Margin="3" Width="75" Click="ResetAllButton_Click">Reset All</Button>
                                </StackPanel>
                            </GroupBox>                            
                        </StackPanel>
                    </Expander>
                </StackPanel>

                <StackPanel Orientation="Vertical">
                    <!-- Auto-Adjust -->
                    <Expander IsExpanded="True" Header="Presets" >
                        <StackPanel Margin="5,5,5,5"  Orientation="Vertical" HorizontalAlignment="Center">
                            <GroupBox Width="175" Header="Select Preset">
                                <StackPanel Orientation="Horizontal">
                                    <Label>Effect :</Label>
                                    <ComboBox Margin="5" SelectedIndex="0" Width="75" 
                                              SelectionChanged="EffectComboBox_SelectionChanged" >
                                        <ComboBoxItem>Default</ComboBoxItem>
                                        <ComboBoxItem>Classical</ComboBoxItem>
                                        <ComboBoxItem>Jazz</ComboBoxItem>
                                        <ComboBoxItem>Pop</ComboBoxItem>
                                        <ComboBoxItem>Rock</ComboBoxItem>
                                    </ComboBox>
                                </StackPanel>
                            </GroupBox>                            
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </StackPanel>
